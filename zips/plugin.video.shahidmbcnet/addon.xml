<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.shahidmbcnet"
       name="Shahid Arabic"
       version="3.3.1"
       provider-name="shani">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.beautifulsoup" version="3.0.8"/>
    <import addon="plugin.video.youtube" version="2.9.2"/>
	<import addon="script.module.elementtree" version="1.2.8"/>
	<import addon="script.common.plugin.cache" version="0.9.1"/>

  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>ShahidMBC.net XBMC Client</summary>
    <description>Formally known as ShahidMBC.net. This plugin fetches the video sources from ShahidMBC.net, youtube and some Live channels which you can play on XBMC compatible plateforms</description>
    <platform>all</platform>
  </extension>
</addon>
